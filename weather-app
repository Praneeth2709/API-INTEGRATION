  <meta charset="UTF-8" />
  <title>Weather App</title>
  <style>
    body {
      font-family: sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #f0f0f0;
    }
    .app {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      text-align: center;
      max-width: 400px;
    }
    input, button {
      padding: 10px;
      font-size: 16px;
      margin: 5px;
    }
    #weatherResult {
      margin-top: 15px;
    }
    #loader {
      margin-top: 10px;
      font-style: italic;
      color: #555;
    }
    .hidden {
      display: none;
    }
  </style>
