<body>
  <div class="app">
    <h2>Weather App üå§</h2>
    <input type="text" id="cityInput" placeholder="Enter city" />
    <button onclick="getWeather()">Check</button>
    <div id="loader" class="hidden">Loading...</div>
    <div id="weatherResult"></div>
  </div>

  <script>
    async function getWeather() {
      const city = document.getElementById('cityInput').value.trim();
      const resultBox = document.getElementById('weatherResult');
      const loader = document.getElementById('loader');
      const apiKey = 'c8d7f9d773dc91737dc591197156f961';

      resultBox.innerHTML = '';
      loader.classList.remove('hidden');

      if (!city) {
        loader.classList.add('hidden');
        resultBox.innerHTML = '<p>Please enter a city name.</p>';
        return;
      }

      const url = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric`;
      console.log("API URL:", url);

      try {
        const response = await fetch(url);
        const data = await response.json();
        loader.classList.add('hidden');

        if (data.cod === 200) {
          resultBox.innerHTML = `
            <h2>${data.name}, ${data.sys.country}</h2>
            <p>üå° Temperature: ${data.main.temp} ¬∞C</p>
            <p>‚òÅ Weather: ${data.weather[0].description}</p>
            <p>üí® Wind: ${data.wind.speed} m/s</p>
          `;
        } else {
          resultBox.innerHTML = `<p>City not found. Please try again.</p>`;
        }
      } catch (error) {
        loader.classList.add('hidden');
        resultBox.innerHTML = `<p>Error fetching weather data. Try again later.</p>`;
        console.error("Fetch error:", error);
      }
    }
  </script>
</body>
</html>
